<%  include ../partials/header.ejs %>

<h1>Editar Pessoa</h1>
<p> <a href="/pessoas">Voltar para lista de Pessoas</a></p>

<form method="post">
    <div class="form-group" style="text-align: left">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" id="nome" name="nome" placeholder="Digite seu nome" value="<%= pessoa.nome %>"/>
    </div>
    <div class="form-group" style="text-align: left">
        <label for="nascimento">Nascimento</label>
        <input type="text" class="form-control" id="nascimento" name="nascimento" placeholder="Informe a sua data de nascimento" value="<%= pessoa.nascimento %>"/>
    </div>
    <div class="form-group" style="text-align: left">
        <label for="cargo">Cargo</label>
        <input type="text" class="form-control" id="cargo" name="cargo" placeholder="Digite o seu cargo" value="<%= pessoa.cargo %>"/>
    </div>   
    <div style="text-align: left">
        <button type="submit" class="btn btn-primary">Salvar</button>
    </div>
</form>

<% include ../partials/footer.ejs %>